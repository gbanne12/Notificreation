<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.bannerga.notificreation.NotificationActivity">


    <!--
        Title text box is positioned from top of the screen
          All other elements are positioned from it.
     -->
    <EditText
        android:id="@+id/titleTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textAutoCorrect"
        android:textColor="@color/colorTextGrey"
        android:backgroundTint="@color/colorAccentBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/small_margin"/>


    <EditText
        android:id="@+id/bodyTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textAutoCorrect"
        android:textColor="@color/colorTextGrey"
        android:backgroundTint="@color/colorAccentBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextBox"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/small_margin"/>

    <ImageView
        android:id="@+id/colorpicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_color_palette"
        android:clickable="true"
        android:focusable="true"
        android:onClick="showColorPalette"
        app:layout_constraintStart_toStartOf="@id/persistentSwitch"
        app:layout_constraintTop_toBottomOf="@+id/bodyTextBox"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:contentDescription="@string/color_palette_icon" />


    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/titleTextBox"
        android:text="@string/notification_title_label"
        android:textColor="@color/colorTextGrey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/titleTextBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/micro_margin"/>

    <TextView
        android:id="@+id/bodyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/bodyTextBox"
        android:text="@string/notification_body_label"
        android:textColor="@color/colorTextGrey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bodyTextBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/micro_margin"/>

    <TextView
        android:id="@+id/colorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_color_label"
        android:textColor="@color/colorTextGrey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/colorpicker"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/micro_margin"/>

    <TextView
        android:id="@+id/persistentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/persistent_check_box_label"
        android:textColor="@color/colorTextGrey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/persistentSwitch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginBottom="@dimen/micro_margin"/>

    <Switch
        android:id="@+id/persistentSwitch"
        android:checked="true"
        android:buttonTint="@color/colorAccentBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/colorpicker"
        app:layout_constraintStart_toStartOf="@id/bodyTextBox"
        android:layout_marginTop="@dimen/medium_margin" />

    <ImageButton
        android:id="@+id/okButton"
        android:src="@mipmap/ic_notification_badge"
        android:tint="@color/colorTextGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="@string/notification_button_label"
        android:textColor="@color/colorTextGrey"
        android:onClick="submitClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin" />


</android.support.constraint.ConstraintLayout>
